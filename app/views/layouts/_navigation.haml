.col-sidebar.col-fixed-primary.text-center
  .top
    %nav.nav
      %a.nav-link.logo{href: "/"}
        %i.fas.fa-chess-rook.fa-fw{alt: "Garrison Logo", style: "font-size:2.5em;", title: "Garrison"}
      - Kind.kept.all.each do |kind|
        = link_to alerts_path(alert: { kinds: [kind.slug] }), title: kind.name, class: 'nav-link' do
          %span.fa-layers.fa-fw{style: "font-size: 2.5em"}
            %i.fa-fw{class: kind.icon}
            %span.fa-layers-counter= kind.alerts.count
      - Family.kept.all.each do |family|
        = link_to alerts_path(alert: { families: [family.slug] }), title: family.name, class: 'nav-link' do
          %span.fa-layers.fa-fw{style: "font-size: 2.5em"}
            %i.fa-fw{class: family.icon}
            %span.fa-layers-counter= family.alerts.count
  .bottom
    %nav.nav
      .dropup
        %a.nav-link{"data-toggle" => "dropdown", href: "", title: "Profile"}
          %i.fas.fa-user-shield{style: "font-size: 2.5em"}
        .dropdown-menu
          %h6.dropdown-header Lloyd
          .dropdown-divider
          %a.dropdown-item{href: "/profile"}
            %i.far.fa-fw.fa-user
            Your Profile
          %a.dropdown-item{href: "/users/edit"}
            %i.fas.fa-shield-alt
            Security Settings
          .dropdown-divider
          %a.dropdown-item{"data-method" => "delete", href: "/sign_out", rel: "nofollow"}
            %i.fas.fa-sign-out-alt
            Sign Out
